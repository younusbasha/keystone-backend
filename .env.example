# TechSophy Keystone Backend Environment Configuration

# Application Settings
SECRET_KEY=your-super-secret-key-change-in-production-make-it-long-and-random
ENVIRONMENT=development
DEBUG=true
API_VERSION=v1

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./keystone.db
# For PostgreSQL: postgresql+asyncpg://username:password@localhost:5432/techsophy_keystone
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=redis123

# AI Integration
GEMINI_API_KEY=your-google-gemini-api-key-here

# Authentication & Security
JWT_SECRET_KEY=your-jwt-secret-key-different-from-main-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Keycloak Integration (Optional)
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=keystone
KEYCLOAK_CLIENT_ID=keystone-backend
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@techsophy-keystone.com

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/keystone.log

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_ENABLED=false

# Development Settings
RELOAD_ON_CHANGE=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Production Settings (Override for production)
# ENVIRONMENT=production
# DEBUG=false
# CORS_ORIGINS=https://your-frontend-domain.com
# DATABASE_URL=postgresql+asyncpg://username:password@postgres-host:5432/techsophy_keystone
